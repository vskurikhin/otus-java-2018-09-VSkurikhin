<!-- AddView.ui.xml -->

<!--suppress GWTStyleCheck -->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:elem='urn:import:com.google.gwt.dom.client'>
    <ui:with field='res' type='ru.otus.gwt.client.text.ApplicationConstants'/>
    <ui:style>
        .redButton {
        font-size: 10px;
        }
        .marginTop5px {
        margin-top: 5px;
        }
    </ui:style>
    <g:VerticalPanel addStyleNames="w3-row login-margin">
        <g:HorizontalPanel ui:field="firstNamePanel" addStyleNames="w3-col m1 text-margin">
            <g:Label text="First Name: " addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="firstNameTextField" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel ui:field="secondNamePanel" addStyleNames="w3-col m1 text-margin">
            <g:Label text="Second Name: " addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="secondNameTextField" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel ui:field="surNamePanel" addStyleNames="w3-col m1 text-margin">
            <g:Label text="Surname: " addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="surNameTextField" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel ui:field="jobPanel" addStyleNames="w3-col m1 text-margin">
            <g:Label text="Job: " addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="jobTextField" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel ui:field="cityPanel" addStyleNames="w3-col m1 text-margin">
            <g:Label text="City: " addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="cityTextField" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel ui:field="agePanel" addStyleNames="w3-col m1 text-margin">
            <g:Label text="Age: " addStyleNames="firstColumnWidth"/>
            <g:TextBox ui:field="ageTextField" addStyleNames="inputWidth"/>
        </g:HorizontalPanel>

        <g:HorizontalPanel addStyleNames="w3-col m1 submitArea text-margin" horizontalAlignment="ALIGN_CENTER" width="100%">
            <g:Button text="add" ui:field="submit" addStyleNames="{style.redButton} submitArea"/>
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>
