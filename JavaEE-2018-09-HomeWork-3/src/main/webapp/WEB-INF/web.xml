<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

   <context-param>
        <param-name>DataFileLocation</param-name>
        <!-- param-value>file:///D:/temp/data.xml</param-value -->
        <param-value>file:////tmp/data.xml</param-value>
    </context-param>

    <resource-ref>
        <description>My PostgreSQL Datasource</description>
        <res-ref-name>jdbc/PostgresMyDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
